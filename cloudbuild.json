{
    "steps": [
        {
            "name": "node",
            "id": "dependicies",
            "entrypoint": "npm",
            "args": [
                "install"
            ]
        },
        {
            "name": "node",
            "entrypoint": "npm",
            "id": "build",
            "args": [
                "run",
                "build"
            ],
            "waitFor": ["dependicies"]
        },
        {
            "name": "node",
            "entrypoint": "npm",
            "id": "run",
            "args": [
                "run",
                "start:prod"
            ],
            "waitFor": ["build"]
        }
    ]
}